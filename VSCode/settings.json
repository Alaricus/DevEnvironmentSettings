{
  // Requires Fira Code iScript font to be installed.
  // https://github.com/kencrocken/FiraCodeiScript

  // Requires Atom One Dark Theme extension to be installed.
  // https://marketplace.visualstudio.com/items?itemName=akamud.vscode-theme-onedark
  
  // Other installed extensions not configured here.
  // Path Intellisense: https://marketplace.visualstudio.com/items?itemName=christian-kohler.path-intellisense
  // Import Cost: https://marketplace.visualstudio.com/items?itemName=wix.vscode-import-cost
  // Git Lens: https://marketplace.visualstudio.com/items?itemName=eamodio.gitlens

  "workbench.colorTheme": "Atom One Dark",
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#555555",
    "tab.activeBackground": "#333333"
  },

  "terminal.integrated.inheritEnv": true,
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.fontFamily": "Fira Code iScript",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.15,

  "editor.fontFamily": "Fira Code iScript",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.minimap.renderCharacters": false,
  "editor.scrollBeyondLastLine": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.renderWhitespace": "boundary",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword.control",
          "storage",
          "meta.class.instance.constructor",
          "variable.language",
          "text.html.basic entity.other.attribute-name.html",
          "text.html.basic entity.other.attribute-name",
        ],
        "settings": {
          "fontStyle": "italic",
        }
      },
      {
        "scope": [
          "storage.type.function.arrow",
        ],
        "settings": {
          "fontStyle": "",
        }
      },
      {
        "scope": [
          "variable.other.object",
          "variable.other.property",
          "support.variable.property.dom.js",
        ],
        "settings": {
          "foreground": "#cccccc",
        }
      },
    ]
  },

  "eslint.alwaysShowStatus": true,
  "breadcrumbs.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.trimTrailingWhitespace": true,
  "javascript.validate.enable" : false ,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverage": true
  }
}
