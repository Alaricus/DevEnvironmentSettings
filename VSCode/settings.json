{
  // Requires Atom One Dark Theme extension to be installed.
  // https://marketplace.visualstudio.com/items?itemName=akamud.vscode-theme-onedark
  
  // Requires Fira Code iScript font to be installed.
  // https://github.com/kencrocken/FiraCodeiScript
  
  // Requires Bracket Pair Colorizer 2 extension to be installed.
  // https://marketplace.visualstudio.com/items?itemName=CoenraadS.bracket-pair-colorizer-2
  
  // Other installed extensions not configured here.
  // Path Intellisense: https://marketplace.visualstudio.com/items?itemName=christian-kohler.path-intellisense
  // Import Cost: https://marketplace.visualstudio.com/items?itemName=wix.vscode-import-cost
  // Git Lerns: https://marketplace.visualstudio.com/items?itemName=eamodio.gitlens

  "workbench.colorTheme": "Atom One Dark",
  "workbench.editor.tabSizing": "shrink",
    "workbench.colorCustomizations": {
    // "terminal.background":"#1b1b1b",
    // "terminal.foreground":"#ffb000",
    "tab.activeBorder": "#555555",
    "tab.activeBackground": "#333333"
  },
  "terminal.integrated.inheritEnv": true,

  "editor.fontFamily": "Fira Code iScript",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.minimap.renderCharacters": false,
  "editor.scrollBeyondLastLine": false,

  "terminal.integrated.fontFamily": "Fira Code iScript",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1.15,

  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.trimTrailingWhitespace": true,
  "javascript.validate.enable" : false ,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverage": true
  },
  "window.zoomLevel": 0,

  "bracket-pair-colorizer-2.colors": [
    "Goldenrod",
    "Orchid",
    "CornflowerBlue"
  ],

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword.control",
          "storage",
          "meta.class.instance.constructor",
          "variable.language",
          "text.html.basic entity.other.attribute-name.html",
          "text.html.basic entity.other.attribute-name",
        ],
        "settings": {
          "fontStyle": "italic",
        }
      },
      {
        "scope": [
          "storage.type.function.arrow",
        ],
        "settings": {
          "fontStyle": "",
        }
      },
      {
        "scope": [
          "variable.other.object",
          "variable.other.property",
          "support.variable.property.dom.js",
        ],
        "settings": {
          "foreground": "#cccccc",
        }
      },
    ]
  },
  "breadcrumbs.enabled": true,
  "editor.renderWhitespace": "boundary"
}
